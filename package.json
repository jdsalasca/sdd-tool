{
  "name": "sdd-cli",
  "version": "0.1.26",
  "description": "AI-orchestrated specification-driven delivery CLI that plans, validates, and ships production-ready software projects.",
  "keywords": [
    "cli",
    "specification-driven-development",
    "software-design-document",
    "requirements",
    "architecture",
    "technical-spec",
    "workflow",
    "autopilot",
    "project-management"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://github.com/jdsalasca/sdd-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdsalasca/sdd-tool.git"
  },
  "bugs": {
    "url": "https://github.com/jdsalasca/sdd-tool/issues"
  },
  "bin": {
    "sdd-cli": "dist/cli.js",
    "sdd": "dist/cli.js",
    "sdd-tool": "dist/cli.js"
  },
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "files": [
    "dist",
    "router",
    "templates",
    "schemas",
    "flows"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "dev:smoke": "npm run build && npm run smoke:autopilot",
    "dev:release-check": "npm run check:error-codes && npm run check:docs && npm test && npm run verify:publish",
    "check:docs": "node scripts/check-docs-flags.js",
    "check:error-codes": "node scripts/check-error-codes.js",
    "release:notes": "node scripts/generate-release-notes.js",
    "release:changelog": "node scripts/update-changelog.js",
    "release:metrics": "node scripts/post-release-metrics.js",
    "verify:publish": "node scripts/verify-publish-ready.js",
    "verify:release-tag": "node scripts/verify-release-version.js",
    "metrics:summary": "node scripts/metrics-summary.js",
    "smoke:autopilot": "node scripts/autopilot-smoke.js",
    "preinstall": "node scripts/preinstall.js",
    "pretest": "npm run build",
    "test": "node --test tests/*.test.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
