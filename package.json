{
  "name": "sdd-cli",
  "version": "0.1.19",
  "description": "AI-native CLI that turns ideas, issues, and PR feedback into shippable specs, plans, and tracked delivery.",
  "keywords": [
    "cli",
    "specification-driven-development",
    "software-design-document",
    "requirements",
    "architecture",
    "technical-spec",
    "workflow",
    "autopilot",
    "project-management"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://github.com/jdsalasca/sdd-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdsalasca/sdd-tool.git"
  },
  "bugs": {
    "url": "https://github.com/jdsalasca/sdd-tool/issues"
  },
  "bin": {
    "sdd-cli": "dist/cli.js",
    "sdd": "dist/cli.js"
  },
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "files": [
    "dist",
    "router",
    "templates",
    "schemas",
    "flows"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "check:docs": "node scripts/check-docs-flags.js",
    "release:notes": "node scripts/generate-release-notes.js",
    "release:changelog": "node scripts/update-changelog.js",
    "release:metrics": "node scripts/post-release-metrics.js",
    "verify:publish": "node scripts/verify-publish-ready.js",
    "verify:release-tag": "node scripts/verify-release-version.js",
    "smoke:autopilot": "node scripts/autopilot-smoke.js",
    "preinstall": "node scripts/preinstall.js",
    "pretest": "npm run build",
    "test": "node --test tests/*.test.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
